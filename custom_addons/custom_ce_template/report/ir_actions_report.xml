<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_simple_saleorder" model="ir.actions.report">
        <field name="name">Simple Quotation / Order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_ce_template.report_simple_saleorder</field>
        <field name="report_file">custom_ce_template.report_simple_saleorder</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Simple Quotation - %s' % (object.name)) or 'Simple Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>