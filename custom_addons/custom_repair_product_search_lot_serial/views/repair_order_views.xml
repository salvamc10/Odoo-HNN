<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_repair_order_form_inherit" model="ir.ui.view">
        <field name="name">repair.order.form.inherit</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <!-- Modificamos el campo product_id para que sea de solo lectura -->
            <field name="product_id" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </field>
            
            <!-- Aseguramos que lot_id sea editable y permita creación/edición -->
            <field name="lot_id" position="attributes">
                <attribute name="readonly">0</attribute>
                <attribute name="options">{'no_create': False, 'no_open': False}</attribute>
            </field>
            
            <!-- Añadimos x_machine_number antes de lot_id -->
            <field name="lot_id" position="before">
                <field name="x_machine_number" widget="many2one" options="{'no_create': False, 'no_open': False}" context="{'default_product_id': product_id, 'default_x_machine_number': x_machine_number.x_machine_number}" domain="[('id', 'in', allowed_lot_ids)]"/>
            </field>
            
            
            <field name="lot_id" position="attributes">
                <attribute name="invisible">[('product_id', '!=', False)]</attribute>
            </field>
        </field>
    </record>
</odoo>