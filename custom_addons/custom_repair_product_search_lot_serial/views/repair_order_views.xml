<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_repair_order_form_inherit" model="ir.ui.view">
        <field name="name">repair.order.form.inherit</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <!-- Campo computed invisible para dominios -->
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="allowed_lot_ids" invisible="1"/>
            </xpath>
            
            <!-- Modificamos el campo product_id original para que sea readonly cuando esté lleno -->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            
            <!-- Añadimos los campos de búsqueda ANTES del product_id -->
            <xpath expr="//field[@name='product_id']" position="before">
                <!-- Campo de búsqueda por número de serie/lote -->
                <field name="lot_id" 
                       string="🔍 Search by Lot/Serial Number"
                       widget="many2one" 
                       options="{'no_create': True, 'no_open': True}" 
                       domain="[('id', 'in', allowed_lot_ids)]"/>
                
                <!-- Campo de búsqueda por número de máquina -->
                <field name="x_machine_number" 
                       string="🔍 Search by Machine Number"
                       widget="many2one" 
                       options="{'no_create': True, 'no_open': True}" 
                       context="{'show_lot_name': True}" 
                       domain="[('id', 'in', allowed_lot_ids), ('x_machine_number', '!=', False)]"/>
            </xpath>
            
            <!-- Modificamos el lot_id original para que sea informativo -->
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="string">📋 Selected Lot/Serial</attribute>
                <attribute name="readonly">1</attribute>
            </xpath>
            
            <!-- Añadimos campo informativo para número de máquina después del lot_id original -->
            <xpath expr="//field[@name='lot_id']" position="after">
                <!-- Mostrar número de máquina como información -->
                <field name="x_machine_number" 
                       string="📋 Machine Number"
                       widget="char"
                       readonly="1"/>
                
                <!-- Botón para limpiar selección -->
                <button name="clear_selection" 
                        type="object" 
                        string="🔄 New Search" 
                        class="btn-secondary oe_link"/>
            </xpath>
        </field>
    </record>
</odoo>