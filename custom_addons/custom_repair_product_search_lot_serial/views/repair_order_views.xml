<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_repair_order_form_inherit" model="ir.ui.view">
        <field name="name">repair.order.form.inherit</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <!-- Campo computed invisible para dominios -->
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="allowed_lot_ids" invisible="1"/>
            </xpath>
            
                   
            <!-- Modificamos el lot_id original para que sea informativo -->
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="string">游늶 Lote/Serie</attribute>
                <attribute name="invisible">0</attribute>
                <attribute name="readonly">0</attribute>
            </xpath>
            
            <!-- A침adimos campo informativo para n칰mero de m치quina despu칠s del lot_id original -->
            <xpath expr="//field[@name='lot_id']" position="after">
                <!-- Mostrar n칰mero de m치quina como informaci칩n -->
                <field name="x_machine_number" string="游늶 N칰mero de M치quina" context="{'show_x_machine_number': True}" />
                
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>           
                
              
            </xpath>
        </field>
    </record>
</odoo>