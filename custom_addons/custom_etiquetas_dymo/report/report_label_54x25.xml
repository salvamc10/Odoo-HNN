<odoo>
    <template id="report_label_54x25">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="lot">
                <div style="width: 54mm; height: 25mm; padding: 2mm; border: 1px solid #ccc;">
                    <div>
                        <strong>Serie:</strong> <span t-esc="lot.name"/>
                    </div>
                    <div>
                        <strong>Producto:</strong> <span t-esc="lot.product_id.display_name"/>
                    </div>
                    <div>
                        <img t-att-src="'/report/barcode/EAN13/%s' % lot.name" style="width:100%"/>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>