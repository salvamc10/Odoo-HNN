<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista para el modelo mail.template con firma personalizada por compañía -->
    <record id="view_mail_template_form_signature_company" model="ir.ui.view">
        <field name="name">mail.template.form.signature.company</field>
        <field name="model">mail.template</field>
        <field name="inherit_id" ref="mail.email_template_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='template_properties']" position="after">
                <group string="Firma personalizada por compañía">
                    <field name="company_id"/>
                    <field name="custom_signature" widget="html"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>