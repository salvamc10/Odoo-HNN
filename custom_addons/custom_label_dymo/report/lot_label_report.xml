<odoo>
  <!-- PLANTILLA QWEB PARA LOTE -->
  <template id="report_lotlabel_dymo">
    <t t-call="web.basic_layout">
      <t t-foreach="docs" t-as="lot">
        <div style="width: 57mm; height: 32mm; font-family: Arial, sans-serif; padding: 2mm; box-sizing: border-box;">
          <div style="height: 100%; display: flex; flex-direction: column; justify-content: space-around; align-items: center; text-align: center;">

            <div>
              <img t-att-src="'/report/barcode/Code128/%s' % lot.name" style="height: 34px;" />
            </div>

            <div style="font-size: 11px;">
              <t t-esc="lot.name"/>
            </div>

            <div style="font-size: 12px; font-weight: bold;">
              <t t-esc="lot.product_id.name"/>
            </div>

            <div style="font-size: 10px;">
              [<t t-esc="lot.product_id.default_code"/>]
            </div>

          </div>
        </div>
      </t>
    </t>
  </template>

  <!-- ACCIÃ“N DEL REPORTE -->
  <record id="action_report_lotlabel_dymo" model="ir.actions.report">
    <field name="name">Etiqueta Dymo Lote</field>
    <field name="model">stock.lot</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">custom_label_dymo.report_lotlabel_dymo</field>
    <field name="print_report_name">'Etiqueta - %s' % (object.name)</field>
    <field name="paperformat_id" search="[('name','=','Dymo Label Sheet')]"/>
  </record>
</odoo>
