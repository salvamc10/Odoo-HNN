<odoo>
  <!-- PLANTILLA QWEB PARA LOTE -->
  <template id="report_lotlabel_dymo">
    <t t-call="web.basic_layout">
      <t t-foreach="docs" t-as="lot">
        <div style="width: 57mm; height: 32mm; display: flex; flex-direction: column; justify-content: center; align-items: center; font-family: Arial, sans-serif; font-size: 9px; text-align: center; padding: 2mm 3mm; box-sizing: border-box;">
          <div style="margin-bottom: 2mm;">
            <img t-att-src="'/report/barcode/Code128/%s' % lot.name" height="28"/>
            <div style="font-size: 9px; margin-top: 1mm;">
              <t t-esc="lot.name"/>
            </div>
          </div>

          <div style="font-weight: bold; font-size: 10px; margin-top: 2mm;">
            <t t-esc="lot.product_id.name"/>
          </div>

          <div style="font-size: 9px; margin-top: 1mm;">
            [<t t-esc="lot.product_id.default_code"/>]
          </div>
        </div>
      </t>
    </t>
  </template>

  <!-- ACCIÃ“N DEL REPORTE -->
  <record id="action_report_lotlabel_dymo" model="ir.actions.report">
    <field name="name">Etiqueta Dymo Lote</field>
    <field name="model">stock.lot</field> <!-- CORREGIDO -->
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">custom_label_dymo.report_lotlabel_dymo</field>
    <field name="print_report_name">'Etiqueta - %s' % (object.name)</field>
    <field name="paperformat_id" search="[('name','=','Dymo Label Sheet')]"/>
  </record>
</odoo>
