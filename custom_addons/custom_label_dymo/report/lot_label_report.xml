<odoo>
  <!-- PLANTILLA QWEB PARA LOTE -->
  <template id="report_lotlabel_dymo">
    <t t-call="web.basic_layout">
      <t t-foreach="docs" t-as="lot">
        <div style="width: 85mm; height: 30mm; padding: 2mm 4mm; font-family: Arial, sans-serif;">
          <div style="text-align: center;">
            <t t-if="lot.product_id.barcode">
              <img t-att-src="'/report/barcode/Code128/%s' % lot.product_id.barcode" height="40"/>
              <br/>
              <span style="font-size: 10px;"><t t-esc="lot.product_id.barcode"/></span>
            </t>
          </div>
          <div style="text-align: center; font-size: 12px; font-weight: bold; margin-top: 2mm;">
            <t t-esc="lot.product_id.name"/>
          </div>
          <div style="text-align: center; font-size: 10px;">
            <t t-esc="lot.name"/>
          </div>
          <div style="text-align: center; font-size: 10px;">
            <t t-esc="lot.product_id.default_code"/>
          </div>
        </div>
      </t>
    </t>
  </template>

  <!-- ACCIÃ“N DEL REPORTE -->
  <record id="action_report_lotlabel_dymo" model="ir.actions.report">
    <field name="name">Etiqueta Dymo Lote</field>
    <field name="model">stock.lot</field> <!-- CORREGIDO -->
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">custom_label_dymo.report_lotlabel_dymo</field>
    <field name="print_report_name">'Etiqueta - %s' % (object.name)</field>
    <field name="paperformat_id" search="[('name','=','Dymo Label Sheet')]"/>
  </record>
</odoo>
