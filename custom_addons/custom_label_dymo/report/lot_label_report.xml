<odoo>
  <template id="report_lotlabel_dymo">
    <t t-call="web.basic_layout">
      <t t-foreach="docs" t-as="lot">
        <div style="page-break-inside: avoid; margin-bottom: 5mm;">
          <strong><t t-esc="lot.name"/></strong><br/>
          <t t-esc="lot.product_id.display_name"/><br/>
          <t t-if="lot.product_id.barcode">
            <img t-att-src="'/report/barcode/Code128/%s' % lot.product_id.barcode" height="40" width="200"/>
          </t>
        </div>
      </t>
    </t>
  </template>

  <record id="action_report_lotlabel_dymo" model="ir.actions.report">
    <field name="name">Etiqueta Dymo Lote</field>
    <field name="model">stock.production.lot</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">custom_label_dymo.report_lotlabel_dymo</field>
    <field name="print_report_name">'Etiqueta - %s' % (object.name)</field>
    <field name="paperformat_id" ref="base.paperformat_euro"/>
  </record>
</odoo>
