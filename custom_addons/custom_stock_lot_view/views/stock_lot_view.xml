<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista en formato lista (list view) -->
    <record id="view_stock_lot_list_custom" model="ir.ui.view">
        <field name="name">stock.lot.list.custom</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <list string="Gestión de Unidades" sample="1" multi_edit="1">
                <field name="employee_assigned_ids" widget="many2many_tags" options="{'color_field': 'color'}" string="Mecánicos Asignados"/>
                <field name="product_id" string="Modelo" readonly="1"/>
                <field name="state" string="Estado" widget="badge" readonly="1"/>
                <field name="name" string="Nº de Serie" readonly="1"/>
                <field name="x_machine_number" string="Nº de Máquina" readonly="1"/>
                <field name="quality_operations_pending" string="Op. Fabricación" readonly="1"/>
                <field name="quality_operations_outgoing" string="Op. Salida" readonly="1"/>
                <field name="note" string="Comentarios" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- Vista en formato formulario (form view) -->
    <record id="view_stock_lot_form_custom" model="ir.ui.view">
        <field name="name">stock.lot.form.custom</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <form string="Gestión de Unidades">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="product_id" readonly="1"/>
                        <field name="x_machine_number" readonly="1"/>
                        <field name="employee_assigned_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <group>
                        <field name="quality_operations_pending" readonly="1"/>
                        <field name="quality_operations_outgoing" readonly="1"/>
                    </group>
                    <group string="Notas">
                        <field name="note" widget="html" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir la vista -->
    <record id="action_stock_lot_custom" model="ir.actions.act_window">
        <field name="name">Gestión de unidades</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_stock_lot_list_custom"/>
    </record>

    <!-- Menú personalizado -->
    <menuitem id="menu_stock_lot_custom" 
            name="Gestión de unidades" 
            parent="stock.menu_stock_root"
            action="action_stock_lot_custom"/>
</odoo>
