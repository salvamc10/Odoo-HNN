<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista en formato lista (list view) -->
    <record id="view_stock_lot_list_custom" model="ir.ui.view">
        <field name="name">stock.lot.list.custom</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <list string="Gestión de Unidades">
                <field name="mechanic_id" string="Mecánico"/>
                <field name="product_id" string="Modelo"/>
                <field name="state" string="Estado"/>
                <field name="name" string="Número de Serie"/>
                <field name="x_machine_number" string="Número de Máquina"/>
                <field name="quality_operations_pending" string="Operaciones de Fabricación"/>
                <field name="quality_operations_outgoing" string="Operaciones de Salida"/>
                <field name="note" string="Comentarios"/>
            </list>
        </field>
    </record>

    <!-- Vista en formato formulario (form view) -->
    <record id="view_stock_lot_form_custom" model="ir.ui.view">
        <field name="name">stock.lot.form.custom</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <form string="Gestión de Unidades">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="x_machine_number"/>
                        <field name="mechanic_id" readonly="1"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <group>
                        <field name="quality_operations_pending" readonly="1"/>
                        <field name="quality_operations_outgoing" readonly="1"/>
                    </group>
                    <group string="Notas">
                        <field name="note" placeholder="Escribe aquí tus notas..." widget="html"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir la vista -->
    <record id="action_stock_lot_custom" model="ir.actions.act_window">
        <field name="name">Gestión de Unidades</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_stock_lot_list_custom"/>
    </record>

    <!-- Menú personalizado -->
    <menuitem id="menu_stock_lot_custom" 
            name="Gestión de Unidades" 
            parent="stock.menu_stock_root"
            action="action_stock_lot_custom"/>
</odoo>