<odoo>
    <record id="view_hr_department_kanban_custom" model="ir.ui.view">
        <field name="name">hr.department.kanban.dashboard</field>
        <field name="model">hr.department</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <a type="open_department_projects"
                               name="%(action_projects_by_department)d"
                               context="{'default_department_id': record.id.raw_value}"
                               class="btn btn-primary">
                                <strong><field name="name"/></strong>
                            </a>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_hr_department_dashboard" model="ir.actions.act_window">
        <field name="name">Seleccionar Departamento</field>
        <field name="res_model">hr.department</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_hr_department_kanban_custom"/>
    </record>
</odoo>
