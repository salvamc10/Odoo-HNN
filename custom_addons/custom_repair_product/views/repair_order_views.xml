<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_repair_order_form_inherit_custom_serial_first" model="ir.ui.view">
        <field name="name">repair.order.form.serial.first</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
        <!-- Mover lot_id antes que product_id -->
        <xpath expr="//field[@name='product_id']" position="before">
            <xpath expr="//field[@name='lot_id']" position="move"/>
        </xpath>
        <!-- Buscar entre todas las series de la compañía -->
        <xpath expr="//field[@name='lot_id']" position="attributes">
            <attribute name="domain">[('company_id', '=', company_id)]</attribute>
            <attribute name="string">Nº de serie</attribute>
            <attribute name="placeholder">Buscar o escanear nº de serie</attribute>
            <attribute name="options">{'no_open': True}</attribute>
        </xpath>
        </field>
    </record>
</odoo>
