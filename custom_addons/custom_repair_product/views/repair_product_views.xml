<odoo>
    <!-- Vista tipo lista -->
    <record id="view_repair_product_line_list" model="ir.ui.view">
        <field name="name">repair.product.line.list</field>
        <field name="model">repair.product.line</field>
        <field name="arch" type="xml">
            <list string="Líneas de productos en reparaciones">
                <field name="repair_id"/>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="quantity"/>
                <field name="repair_line_type"/>
                <field name="picked"/>
            </list>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_repair_product_line_search" model="ir.ui.view">
        <field name="name">repair.product.line.search</field>
        <field name="model">repair.product.line</field>
        <field name="arch" type="xml">
            <search string="Buscar Productos en Reparaciones">
                <field name="repair_id"/>
                <field name="product_id"/>
                <field name="picked"/>
                <filter string="No recogidos" domain="[('picked', '=', False)]"/>
                <filter string="Recogidos" domain="[('picked', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_repair_product_line" model="ir.actions.act_window">
        <field name="name">Productos en Reparaciones</field>
        <field name="res_model">repair.product.line</field>
        <field name="view_mode">list</field>        
        <field name="help" type="html">
            <p>Aquí puedes consultar todos los productos incluidos en órdenes de reparación.</p>
        </field>
    </record>

    <!-- Menú directamente en el menú raíz de Reparaciones -->
    <menuitem id="menu_repair_product_line"
              name="Productos en Reparaciones"
              parent="repair.menu_repair_order"
              action="action_repair_product_line"
              sequence="50"/>
</odoo>
