<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista para las plantillas de hojas de trabajo -->
    <record id="repair_worksheet_template_form_view" model="ir.ui.view">
        <field name="name">repair.worksheet.template.form</field>
        <field name="model">repair.worksheet.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nombre de la Plantilla"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="sequence"/>
                            <field name="document_folder_id"/>
                            <field name="require_signature"/>
                            <field name="signature_type" 
                                   attrs="{'invisible': [('require_signature', '=', False)],
                                           'required': [('require_signature', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="report_view_id"/>
                            <field name="worksheet_template_sequence"/>
                            <field name="worksheet_count" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción" name="description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="repair_worksheet_template_tree_view" model="ir.ui.view">
        <field name="name">repair.worksheet.template.tree</field>
        <field name="model">repair.worksheet.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="document_folder_id"/>
                <field name="require_signature"/>
                <field name="worksheet_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <record id="action_repair_worksheet_template" model="ir.actions.act_window">
        <field name="name">Plantillas de Hojas de Trabajo</field>
        <field name="res_model">repair.worksheet.template</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_repair_worksheet_template"
              name="Plantillas de Hojas de Trabajo"
              parent="repair.menu_repair_config"
              action="action_repair_worksheet_template"
              sequence="20"/>
    
    <!-- Vista para el wizard de hoja de trabajo -->
    <record id="repair_worksheet_wizard_form_view" model="ir.ui.view">
        <field name="name">repair.worksheet.wizard.form</field>
        <field name="model">repair.worksheet.wizard</field>
        <field name="arch" type="xml">
            <form string="Hoja de Trabajo">
                <sheet>
                    <group>
                        <group>
                            <field name="repair_id" invisible="1"/>
                            <field name="template_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="notes" placeholder="Añada notas sobre el trabajo realizado..."/>
                        </group>
                    </group>
                    <group string="Firma" attrs="{'invisible': [('template_id', '=', False)]}">
                        <field name="worksheet_signature" widget="signature"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirmar" name="action_confirm" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Vista para el wizard de firma -->
    <record id="repair_worksheet_signature_wizard_form_view" model="ir.ui.view">
        <field name="name">repair.worksheet.signature.wizard.form</field>
        <field name="model">repair.worksheet.signature.wizard</field>
        <field name="arch" type="xml">
            <form string="Firmar Hoja de Trabajo">
                <sheet>
                    <group>
                        <group>
                            <field name="repair_id" invisible="1"/>
                            <field name="partner_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Firma">
                        <field name="worksheet_signature" widget="signature" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Firmar" name="action_sign" type="object" class="btn-primary" data-hotkey="s"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel" data-hotkey="c"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>