<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="repair_order_form_view_inherit" model="ir.ui.view">
        <field name="name">repair.order.form.worksheet.inherit</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <!-- Añadir el campo template_id en la vista principal -->
            <xpath expr="//group[@name='repair_info']" position="inside">
                <field name="worksheet_template_id" 
                       options="{'no_quick_create': True}"
                       context="{'default_res_model': 'repair.order'}"/>
            </xpath>

            <!-- Añadir botón estadístico para la hoja de trabajo -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="worksheet_count" invisible="1"/>
                <button class="oe_stat_button"
                        name="action_view_worksheet"
                        type="object"
                        icon="fa-pencil"
                        attrs="{'invisible': ['|', 
                                ('worksheet_template_id', '=', False),
                                ('worksheet_signature', '!=', False)]}">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Hoja de</span>
                        <span class="o_stat_text">Trabajo</span>
                    </div>
                </button>
                <button class="oe_stat_button text-success"
                        name="action_view_worksheet"
                        type="object"
                        icon="fa-check"
                        attrs="{'invisible': ['|', 
                                ('worksheet_template_id', '=', False),
                                ('worksheet_signature', '=', False)]}">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Hoja</span>
                        <span class="o_stat_text">Firmada</span>
                    </div>
                </button>
            </xpath>

            <!-- Añadir botón de firma en el header -->
            <xpath expr="//header" position="inside">
                <button name="action_worksheet_sign"
                        string="Firmar Hoja de Trabajo"
                        type="object"
                        class="btn-primary"
                        attrs="{'invisible': ['|', '|',
                            ('worksheet_template_id', '=', False),
                            ('worksheet_signature', '!=', False),
                            ('state', 'not in', ['confirmed', 'under_repair'])]}"/>
            </xpath>
            
            <!-- Añadir página de hoja de trabajo -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Hoja de Trabajo" name="worksheet"
                      attrs="{'invisible': [('worksheet_template_id', '=', False)]}">
                    <group>
                        <group>
                            <field name="worksheet_signature" widget="signature" readonly="1"
                                   attrs="{'invisible': [('worksheet_signature', '=', False)]}"/>
                            <field name="worksheet_signature_date" readonly="1"
                                   attrs="{'invisible': [('worksheet_signature', '=', False)]}"/>
                            <field name="worksheet_signed_by" readonly="1"
                                   attrs="{'invisible': [('worksheet_signature', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="worksheet_document_id" readonly="1" widget="many2one_binary"
                                   attrs="{'invisible': [('worksheet_document_id', '=', False)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Vista para las plantillas de hojas de trabajo -->
    <record id="repair_worksheet_template_form_view" model="ir.ui.view">
        <field name="name">repair.worksheet.template.form</field>
        <field name="model">repair.worksheet.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nombre de la Plantilla"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="document_folder_id"/>
                            <field name="require_signature"/>
                            <field name="signature_type" 
                                   attrs="{'invisible': [('require_signature', '=', False)],
                                          'required': [('require_signature', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="report_view_id"/>
                            <field name="worksheet_template_sequence"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción" name="description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="repair_worksheet_template_tree_view" model="ir.ui.view">
        <field name="name">repair.worksheet.template.tree</field>
        <field name="model">repair.worksheet.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="document_folder_id"/>
                <field name="require_signature"/>
                <field name="worksheet_count"/>
            </tree>
        </field>
    </record>

    <record id="action_repair_worksheet_template" model="ir.actions.act_window">
        <field name="name">Plantillas de Hojas de Trabajo</field>
        <field name="res_model">repair.worksheet.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_repair_worksheet_template"
              name="Plantillas de Hojas de Trabajo"
              parent="repair.menu_repair_config"
              action="action_repair_worksheet_template"
              sequence="20"/>
</odoo>
