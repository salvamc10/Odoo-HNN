<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_lot_form_inherit_warranty" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.warranty</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="sale_order_id" readonly="1"/>
                <field name="warranty_start_date" readonly="1"/>
                <field name="warranty_months"/>
                <field name="warranty_expiration_date" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
