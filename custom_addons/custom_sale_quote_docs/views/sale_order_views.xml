<odoo>
    <record id="view_order_form_docs" model="ir.ui.view">
        <field name="name">sale.order.form.docs</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
        <xpath expr="//sheet/notebook" position="inside">
            <page string="Creador de presupuestos" position="after"/>
            <page string="Documentos a enviar">
            <field name="order_doc_ids" context="{'default_order_id': active_id}">
                <tree editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="checked"/>
                <field name="name"/>
                <field name="attachment_id"/>
                </tree>
                <form>
                <group>
                    <field name="sequence"/>
                    <field name="checked"/>
                    <field name="name"/>
                    <field name="attachment_id" readonly="1"/>
                </group>
                </form>
            </field>
            <label string="Solo se adjuntarÃ¡n los documentos marcados."/>
            </page>
        </xpath>
        </field>
    </record>
</odoo>
