<odoo>
    <record id="view_partner_list_inherit_centered" model="ir.ui.view">
        <field name="name">res.partner.list.centered.counts</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="x_lead_count" class="text-center"/>
                <field name="x_opportunity_count" class="text-center"/>
                <field name="last_activity_done_date" widget="date"/>
                <field name="x_pending_lead_activity_count" string="Act. pendientes (Leads)" class="text-center"/>
                <field name="x_pending_opportunity_activity_count" string="Act. pendientes (Opps)" class="text-center"/>
            </xpath>
        </field>
    </record>
</odoo>
