<odoo>
  <template id="payment_split_banner" inherit_id="website_sale.payment">
    <xpath expr="//div[@id='payment_method']" position="before">
      <t t-if="split_banner">
        <t t-set="curr_label" t-value="'pedido de recambios' if split_banner.get('curr_is_recambios') else 'pedido de máquina'"/>
        <t t-set="other_label" t-value="'pedido de recambios' if split_banner.get('other_is_recambios') else 'pedido de máquina'"/>

        <div class="alert alert-primary shadow-sm rounded-3 mb-3" role="status">
          <div class="d-flex align-items-start">
            <span class="badge rounded-pill bg-primary me-3" t-translation="on">
              Pago <t t-esc="split_banner.get('step_idx')"/> de <t t-esc="split_banner.get('total')"/>
            </span>

            <div>
              <h5 class="mb-1">
                <t t-if="split_banner.get('mode') == 'first'">
                  <t t-translation="on">Estás en el primer pago</t>
                </t>
                <t t-else="">
                  <t t-translation="on">Último paso</t>
                </t>
              </h5>

              <div class="text-muted">
                <t t-if="split_banner.get('mode') == 'first'">
                  <t t-translation="on">
                    Ahora pagarás el <t t-esc="curr_label"/>.
                    Al finalizar te llevaremos automáticamente a pagar el <t t-esc="other_label"/>.
                  </t>
                </t>
                <t t-else="">
                  <t t-translation="on">
                    Ahora pagarás el <t t-esc="curr_label"/>.
                    El otro pedido ya se ha confirmado.
                  </t>
                </t>
              </div>
            </div>
          </div>
        </div>
      </t>
    </xpath>
  </template>
</odoo>
