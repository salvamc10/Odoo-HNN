<odoo>
    <record id="view_stock_production_lot_form_inherit_machine" model="ir.ui.view">
        <field name="name">stock.production.lot.form.machine</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
        <field name="ref" position="after">
            <field name="x_machine_number"/>
        </field>
        </field>
    </record>

    <record id="view_stock_production_lot_tree_inherit_machine" model="ir.ui.view">
        <field name="name">stock.production.lot.tree.machine</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
        <field name="product_id" position="after">
            <field name="x_machine_number"/>
        </field>
        </field>
    </record>
</odoo>
