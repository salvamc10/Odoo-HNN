<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="custom_funcional.MenuItem">
        <li class="d-flex align-items-center">
            <a href="#" t-on-click="() => this.onToggleFavorite('new')">
            <t t-esc="props.favorite.name"/>
            </a>
            <i class="fa fa-arrows-alt ms-2" t-on-click="() => this.onToggleFavorite('current')"></i>
            <i class="fa fa-trash ms-2" t-on-click="() => this.onDeleteFavorite(props.favorite.id)"></i>
        </li>
    </t>
</templates>