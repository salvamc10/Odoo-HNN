<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View stock_picking View List -->
    <record id="view_stock_picking_list" model="ir.ui.view">
        <field name="name">view.stock_picking.list</field>
        <field name="model">stock_picking</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View stock_picking form -->
    <record id="view_stock_picking_form" model="ir.ui.view">
        <field name="name">view.stock_picking.form</field>
        <field name="model">stock_picking</field>
        <field name="arch" type="xml">
            <form string="Stock_picking">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View stock_picking search -->
    <record id="view_stock_picking_search" model="ir.ui.view">
        <field name="name">view.stock_picking.search</field>
        <field name="model">stock_picking</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action stock_picking -->
    <record id="action_stock_picking" model="ir.actions.act_window">
        <field name="name">Stock_picking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock_picking</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Stock_picking.
            </p>
        </field>
    </record>

</odoo>
