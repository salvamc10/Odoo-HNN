<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista formulario para agregar firma personalizada por compañía en usuarios -->
    <record id="view_res_users_form_signature_company" model="ir.ui.view">
        <field name="name">res.users.form.signature.company</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group string="Firma personalizada por compañía">
                    <field name="signature_company" widget="html" placeholder="Firma personalizada para correos de la compañía"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>