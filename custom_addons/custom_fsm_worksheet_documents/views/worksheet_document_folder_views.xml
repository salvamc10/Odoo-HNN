<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_worksheet_document_folder_form" model="ir.ui.view">
        <field name="name">worksheet.document.folder.form</field>
        <field name="model">worksheet.document.folder</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="document_folder_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="tags_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="DescripciÃ³n">
                            <field name="description"/>
                        </page>
                        <page string="Plantillas">
                            <field name="template_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_worksheet_document_folder_tree" model="ir.ui.view">
        <field name="name">worksheet.document.folder.tree</field>
        <field name="model">worksheet.document.folder</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="document_folder_id"/>
                <field name="template_ids"/>
            </tree>
        </field>
    </record>

    <record id="action_worksheet_document_folder" model="ir.actions.act_window">
        <field name="name">Carpetas de Hojas de Trabajo</field>
        <field name="res_model">worksheet.document.folder</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_worksheet_document_folder"
              name="Carpetas de Hojas de Trabajo"
              parent="industry_fsm.fsm_menu_root"
              action="action_worksheet_document_folder"
              sequence="50"/>
</odoo>
