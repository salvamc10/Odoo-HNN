<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_worksheet_template_form_inherit" model="ir.ui.view">
        <field name="name">project.worksheet.template.form.inherit</field>
        <field name="model">project.worksheet.template</field>
        <field name="inherit_id" ref="industry_fsm.project_worksheet_template_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='worksheet_count']" position="after">
                <field name="document_folder_id"/>
                <field name="require_signature"/>
                <field name="signature_type" attrs="{'invisible': [('require_signature', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
