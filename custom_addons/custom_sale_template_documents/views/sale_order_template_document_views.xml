<odoo>
  <record id="view_sale_order_template_form_inherit_auto_docs" model="ir.ui.view">
    <field name="name">sale.order.template.form.inherit.auto.docs</field>
    <field name="model">sale.order.template</field>
    <field name="inherit_id" ref="sale_pdf_quote_builder.sale_order_template_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='quotation_document_ids']" position="after">
        <field name="custom_auto_document_ids">
          <list editable="bottom">
            <field name="document_id"/>
            <field name="attach_on_quotation"/>
            <field name="attach_on_order"/>
          </list>
          <form>
            <group>
              <field name="document_id"/>
              <field name="attach_on_quotation"/>
              <field name="attach_on_order"/>
            </group>
          </form>
        </field>
      </xpath>
    </field>
  </record>
</odoo>
